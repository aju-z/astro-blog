---
import { slugify, formatDate } from "../js/utils";
import { Image } from "@astrojs/image/components";
import Link from "./Link.astro";
const { frontmatter, url, tagType } = Astro.props;
const Tag = tagType;
const { category, title, date, image, author, description } = frontmatter;
---

<article class="card">
  <small>
    <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
  </small>
  <a href={url} tabindex="-1" aria-hidden="true">
    <Image
      src={image.src}
      alt={image.alt}
      width={400}
      height={250}
      format="webp"
      fit="cover"
      aspectRatio="4:1"
      quality={80}
    />
  </a>

  <div class="content">
    <div>
      <Tag class="h3">
        <a href={url}>{title}</a>
      </Tag>

      <small>
        By <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
          formatDate(date)
        }
      </small>
    </div>
    <p>{description}</p>
    <Link href={url} text="Read Post" style="secondary" />
  </div>
</article>
