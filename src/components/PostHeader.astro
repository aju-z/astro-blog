---
import { slugify, formatDate } from "../js/utils";
import { Image } from "@astrojs/image/components";
const { category, title, date, image, author, description } = Astro.props;
---

<header>
  <div class="container">
    <small>
      <a href={`/category/${slugify(category)}/`} class="badge">{category}</a>
    </small>
    <h1 class="h2">{title}</h1>
    <p>{description}</p>
    <p>
      By <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
        formatDate(date)
      }
    </p>
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width={1200}
    height={600}
    format="webp"
    fit="cover"
    aspectRatio="5:2"
    quality={80}
    class="hero-image"
  />
</header>
