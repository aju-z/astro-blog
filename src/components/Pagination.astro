---
import Link from "./Link.astro";
const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog Pages">
  <div class="pagination">
    {
      prevUrl && (
        <Link
          text="Previous"
          href={prevUrl}
          style="primary"
          isFilled={false}
          borderVisible={false}
          icon={{
            name: "tabler:arrow-big-left-line",
            side: "left",
          }}
        />
      )
    }
    {
      nextUrl && (
        <Link
          text="Next"
          href={nextUrl}
          style="primary"
          isFilled={false}
          borderVisible={false}
          icon={{
            name: "tabler:arrow-big-right-line",
            side: "right",
          }}
        />
      )
    }
  </div>
</nav>
